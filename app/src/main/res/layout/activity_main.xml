<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sourceforge.net.myview.MainActivity">

    <sourceforge.net.myview.view.BatteryView
        android:layout_width="120px"
        android:layout_height="300px"
        android:layout_gravity="center"
        app:bBackGround="#ffffff"
        app:bColor="#00ff00"
        app:bOutColor="#ff0000"
        app:bBorderWidth="10px"
        app:bProgress="25"
        app:bHPadding="5px"
        app:bVPadding="5px"
        app:bCorner="5"
        app:bSmallH="20px"
        app:bItem="5"
        android:layout_marginLeft="20dp"
        />
    <sourceforge.net.myview.view.MyWapContentView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mBackground="@color/backgroud"
        android:padding="10dp"
        app:mText="你在哪"
        app:mTextSize="100px"
        app:mTextColor="@color/textColor"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="扫描二维码"
        />
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <sourceforge.net.myview.view.MyTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="a123455656557dddda"
        android:textSize="20sp"
        android:textColor="#f00"
        app:textAttr="1234"
        />
    <sourceforge.net.myview.view.CustomImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:titleText="在哪里"
        app:titleTextSize="20sp"
        app:titleColor="#f00"
        app:image="@mipmap/ss"
        app:imageScaleType="fitXY"
        />
</LinearLayout>
